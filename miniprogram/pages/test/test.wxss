/* pages/me/me.wxss */
 
page {
    background: gainsboro;
   }
    
   .touxiang {
    width: 100px;
    height: 100px;
    border-radius: 100px;
   }
    
   .top {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: white;
   }
    
   .name {
    margin-top: 20px;
    font-size: 20px;
    margin-bottom: 20px;
    color: red;
   }
    
   .fengexian {
    width: 100%;
    height: 5px;
    background: gainsboro;
   }
    
   /* 联系客服的样式 */
    
   .kefu {
    width: 100%;
    background: white;
    padding: 10px;
   }
    
    
   /* 反馈与建议的样式 */
   .button {
    width: 100%;
    background: white;
    border: none;
    text-align: left;
    padding: 7px 10px;
    margin: 0px;
    line-height: 1.6;
    border-radius: 0;
   }
    
   .button::after {
    border: none;
    border-radius: 0;
   }
    
   .button_title {
    font-size: 1rem;
   }